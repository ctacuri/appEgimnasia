                                    var fechaFin = $("#FechaFinOS").val();
                                    var fechaIniSql = fechaIni.substring(6,10)+'-'+fechaIni.substring(3,5)+"-"+fechaIni.substring(0,2);
                                    var fechaFinSql = fechaFin.substring(6,10)+'-'+fechaFin.substring(3,5)+"-"+fechaFin.substring(0,2);

                                });
                                break;
                        }
                    }
                }
            )
        )


        $("#grid").jqxGrid(
