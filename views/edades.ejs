            $.when(
                $.ajax("/listaEdades"),
                $.ajax("/listaDias")
            ).done(function( json1, json2) {
                //console.log(json1[0].registros);
                var source =
                    {
                        datatype: "json",
                        datafields: [
                            { name: 'id_edad', type: 'int'},
                            { name: 'descripcion', type: 'string'},
                            { name: 'estado', type: 'string'}
                        ],
                        localdata: json1[0].registros
                    };
                var dataAdapter = new $.jqx.dataAdapter(source);

                $("#grid").jqxGrid(
                {
                    source: dataAdapter
                });

                //console.log(json2.registros);
                var source2 =
                    {
                        datatype: "json",
                        datafields: [
                            { name: 'id', type: 'int'},
