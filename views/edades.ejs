            $("#btnSave").click(function() {
                var datos = {
                    id: $("#id").val(),
                    descripcion: $("#descripcion").val()
                };
                console.log(datos);
                var txtMsg = "", url = "";
                if($("#id").val() != ""){
                    url = "/EG/updEdades";
                    txtMsg = "actualizar";
                }else{
                    url = "/EG/saveEdades";
                    txtMsg = "registrar";
                }

                if(confirm("Esta seguro de "+txtMsg+" los datos ?")){
